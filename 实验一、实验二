/*实验二 8.
#include<iostream>
using namespace std;
int main()
{
	float a;
	cout<<"请输入一个正数：" << endl;
	cin>> a;
	float x = a,xn=(a+1)/2;
	while(-0.000001<(xn-x)<0.000001)
		{
		x = xn;
		xn = (a / x + x) / 2;
	}
	cout << "平方根为：" << xn << endl;
	return 0;
	}
*/
/*实验二 9.
#include<iostream>
