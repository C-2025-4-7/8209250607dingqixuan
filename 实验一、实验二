/*实验二 2.
#include<iostream>
using namespace std;
int main()
{
	float x;
	cout << "请输入x:" << endl;
	cin >> x;
	if (x>0&&x<=10)
	{
		if (x < 1)
		{
			cout << "y="<<(3 - 2 * x) << endl;
		}
		else if (1 <= x && x < 5)
		{
			cout << "y="<<(2 / (4 * x) + 1) << endl;
		}
		else
		{
			cout << "y="<<x * x << endl;
		}
		}
	else
		{
		cout << "输入错误" << endl;
	}

	return 0;
}
