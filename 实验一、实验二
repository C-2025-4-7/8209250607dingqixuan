/*实验二 3.
#include<iostream>
using namespace std;
int main()
{
	float a, b, c,C;
	cout << "请输入三角形三边：" << endl;
	cin >> a >> b >> c;
	if (a + b > c && a + c > b && b + c > a)
	{
		if(a==b||b==c||a==c)
		{
		cout << "该三角形为等腰三角形" << endl;
	}
	else
	{
		cout << "该三角形不是等腰三角形" << endl;
	}
		C = (a + b + c);
		cout << "且周长为"<<C << endl;
	}
	else
	{
		cout << "这三边不能构成三角形" << endl;
	}
	return 0;
}
*/
/*实验二 4.
#include<iostream>
using namespace std;
int main()
{
	float a,b;
	char op;
	cout<< "请输入表达式：" << endl;
	cin >> a >> op >> b;
	switch (op)
	{
		case '+':
		cout <<"="<< a + b << endl;
		break;
		case '-':
			cout << "="<<a - b << endl;
			break;
			case '*':
				cout << "="<<a * b << endl;
				break;
				case '/':
					if (b != 0)
					{
						cout <<"="<< a / b << endl;
					}
					else
					{
						cout << "除数不能为零" << endl;
					}
					break;
					case'%':
						if (b!= 0)
						{
							cout <<"="<<(int)a %(int) b << endl;
							}
						else
							{
							cout << "除数不能为零" << endl;
						}
						break;
					default:
						cout << "运算符非法" << endl;
						}
	return 0;
	}
	*/
/*实验二 5.
#include<iostream>
using namespace std;
int main()
{
int a=0,b=0,c=0,d=0;
	char f;
	while((f=getchar()!='\n'))
		{
		if (isalpha(f))
		{
		a++; 
		}
		else if(isspace(f))
		{
		b++
		}
		else if(isdigit(f))
		{
		c++
		}
		else
		{
		d++
		}
		}
	cout<<"字母有" << a << "个" << endl;
	cout<<"空格有"<<b << "个" << endl;
	cout<<"数字有"<<c << "个" << endl;
	cout<<"其他字符有"<<d << "个" << endl;
	return 0;
	}
	*/
/*实验二 6.
#include<iostream>
using namespace std;
int min(int x, int y)
{
	int z;
	z = (x > y) ? x : y;
	return z;
}
int main()
{
	int a, b;
	cout<<"请输入两个正整数：" << endl;
	cin >> a >> b;
	int i = min(a,b) ;
	while (i >= 1)
	{
		if (a % i == 0 && b % i == 0)
		{
			cout << "最大公约数为" << i << endl;
			break;
		}
		else
		{
			i--;
		}
	}
	cout << "最小公倍数为" << a*b/i << endl;
	return 0;
}
*/
/*实验二 7.
